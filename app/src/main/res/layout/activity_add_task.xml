<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RecycleViewTasks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AddTaskActivity">

    <EditText
        android:id="@+id/textViewNameWarrior"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:hint="warrior name"
        app:layout_constraintBottom_toTopOf="@+id/textViewRead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNewTask"
        app:layout_constraintVertical_bias="0.798" />

    <EditText
        android:id="@+id/textViewTask"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:hint="new task"
        app:layout_constraintBottom_toTopOf="@+id/textViewRead"
        app:layout_constraintEnd_toStartOf="@+id/textViewNameWarrior"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNewTask"
        app:layout_constraintVertical_bias="0.798"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleAllTasks"
        android:layout_width="343dp"
        android:layout_height="234dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRead"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Team Task"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.476"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="AddTasK"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycleAllTasks"
        app:layout_constraintVertical_bias="0.801"
        tools:ignore="UsingOnClickInXml" />

    <TextView
        android:id="@+id/textViewNewTask"
        android:layout_width="175dp"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="Add New Task"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewRead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111" />

    <Button
        android:id="@+id/addTaskPrev"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="22dp"
        android:text="prev"
        android:onClick="prev"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewNameWarrior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewNewTask"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216"
        tools:ignore="UsingOnClickInXml" />

</androidx.constraintlayout.widget.ConstraintLayout>